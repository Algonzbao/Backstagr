{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2024",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/src/*": ["src/*"],
      "@/http-api/*": ["src/http-api/*"],
      "@/contexts/*": ["src/contexts/*"],
      "@/comments/*": ["src/contexts/comments/*"],
      "@/posts/*": ["src/contexts/posts/*"],
      "@/concerts/*": ["src/contexts/concerts/*"],
      "@/messages/*": ["src/contexts/messages/*"],
      "@/users/*": ["src/contexts/users/*"],
      "@/shared/*": ["src/contexts/shared/*"],
      "@/tests/*": ["tests/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "allowJs": true
  },
  "include": ["src/**/*", "test/**/*", "scripts/populate-db.js"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
